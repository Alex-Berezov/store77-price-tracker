{
  "name": "store77-price-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Web application for parsing product catalog with automatic price recalculation by current USD exchange rate",
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "echo 'Use: yarn dev:api or yarn dev:web'",
    "dev:api": "yarn workspace api start:dev",
    "dev:web": "yarn workspace web dev",
    "build": "yarn workspaces foreach -A run build",
    "build:api": "yarn workspace api build",
    "build:web": "yarn workspace web build",
    "start:api": "yarn workspace api start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "yarn workspaces foreach -A run test",
    "clean": "yarn workspaces foreach -A run clean",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.0.2"
}
