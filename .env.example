# =================================
# Database Configuration (PostgreSQL)
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=store_scraper
DB_USER=postgres
DB_PASSWORD=password

# Prisma Database URL (constructed from above values)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# API Configuration
# =================================
API_PORT=8080
API_HOST=0.0.0.0

# =================================
# Scraper Configuration
# =================================
# Interval in seconds (default: 3600 = 1 hour)
SCRAPE_INTERVAL=3600

# Target website for scraping
SCRAPE_TARGET_URL=https://store77.net

# =================================
# Currency API Configuration
# =================================
GRINEX_API_URL=https://grinex.io/api/v1/spot/depth?symbol=usdta7a5

# Cache TTL for exchange rate in seconds (default: 300 = 5 minutes)
CURRENCY_CACHE_TTL=300

# =================================
# Frontend Configuration
# =================================
# Web server port
WEB_PORT=3000

# API URL for frontend (must be accessible from user's browser)
# For local development: http://localhost:8080
# For production: https://api.yourdomain.com or http://your-server-ip:8080
NEXT_PUBLIC_API_URL=http://localhost:8080

# =================================
# Docker Configuration
# =================================
# Image tag for versioning
IMAGE_TAG=latest

# =================================
# Deployment Configuration
# =================================
SERVER_HOST=server_ip
SERVER_USER=deploy

# =================================
# Node Environment
# =================================
NODE_ENV=development
