# =================================
# Database Configuration (PostgreSQL)
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=store_scraper
DB_USER=postgres
DB_PASSWORD=password

# Prisma Database URL (constructed from above values)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# API Configuration
# =================================
API_PORT=8080
API_HOST=0.0.0.0

# =================================
# Scraper Configuration
# =================================
# Interval in seconds (default: 3600 = 1 hour)
SCRAPE_INTERVAL=3600

# Target website for scraping
SCRAPE_TARGET_URL=https://store77.net

# =================================
# Currency API Configuration
# =================================
GRINEX_API_URL=https://grinex.io/api/v1/spot/depth?symbol=usdta7a5

# Cache TTL for exchange rate in seconds (default: 300 = 5 minutes)
CURRENCY_CACHE_TTL=300

# =================================
# Frontend Configuration
# =================================
# Web server port
WEB_PORT=3000

# API URL for frontend (must be accessible from user's browser)
# For local development: http://localhost:8080
# For production: https://api.yourdomain.com or http://your-server-ip:8080
NEXT_PUBLIC_API_URL=http://localhost:8080

# Site URL for SEO (Open Graph, sitemap, canonical URLs)
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =================================
# Docker Configuration
# =================================
# Image tag for versioning
IMAGE_TAG=latest

# =================================
# Deployment Configuration
# =================================
SERVER_HOST=server_ip
SERVER_USER=deploy

# =================================
# Rate Limiting Configuration
# =================================
# Short window: requests per second (default: 10 req/1s)
THROTTLE_TTL=1000
THROTTLE_LIMIT=10

# Medium window: requests per 10 seconds (default: 50 req/10s)
THROTTLE_MEDIUM_TTL=10000
THROTTLE_MEDIUM_LIMIT=50

# Long window: requests per minute (default: 100 req/60s)
THROTTLE_LONG_TTL=60000
THROTTLE_LONG_LIMIT=100

# =================================
